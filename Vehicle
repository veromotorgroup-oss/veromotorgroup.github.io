<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Vehicle Details | Vero Motor Group</title>
  <style>
    body { font-family:Arial,sans-serif; background:#000; color:#f5f5f5; margin:0; padding:20px; }
    header nav { background-color:#111; padding:15px; display:flex; justify-content:space-between; align-items:center; }
    .logo { color:#FFD700; font-size:1.5rem; font-weight:bold; display:flex; align-items:center; gap:10px; }
    .logo img { height:30px; }
    ul { list-style:none; display:flex; gap:20px; margin:0; padding:0; }
    ul li a { color:#f5f5f5; text-decoration:none; }
    ul li a.active { color:#FFD700; }
    .vehicle-container { display:flex; flex-wrap:wrap; gap:20px; margin-top:20px; }
    .vehicle-image { flex:1 1 300px; }
    .vehicle-image img { width:100%; border-radius:10px; }
    .vehicle-details { flex:2 1 400px; }
    .vehicle-details h1 { color:#FFD700; margin-top:0; }
    .vehicle-details p { line-height:1.6; font-size:1rem; }
    .back-link { display:inline-block; margin-top:20px; color:#FFD700; text-decoration:none; font-weight:bold; }
  </style>
</head>
<body>
  <header>
    <nav>
      <div class="logo">
        <img src="images/logo.png" alt="Vero Motor Group Logo">
        Vero Motor Group
      </div>
      <ul>
        <li><a href="index.html">Home</a></li>
        <li><a href="inventory.html" class="active">Inventory</a></li>
        <li><a href="about.html">About</a></li>
        <li><a href="contact.html">Contact</a></li>
      </ul>
    </nav>
  </header>

  <div id="vehicle-container" class="vehicle-container"></div>

  <script>
    const params = new URLSearchParams(window.location.search);
    const carId = params.get('id');

    fetch('inventory.json')
      .then(res => res.json())
      .then(data => {
        const car = data.find(c => c.id === carId);
        const container = document.getElementById('vehicle-container');

        if (!car) {
          container.innerHTML = "<p>Vehicle not found.</p>";
          return;
        }

        const imageSrc = car.image ? `images/${car.image}` : `images/placeholder.jpg`;

        container.innerHTML = `
          <div class="vehicle-image"><img src="${imageSrc}" alt="${car.make} ${car.model}"></div>
          <div class="vehicle-details">
            <h1>${car.year} ${car.make} ${car.model}</h1>
            <p><strong>Price:</strong> $${car.price}</p>
            <p><strong>Mileage:</strong> ${car.mileage}</p>
            <p><strong>Type:</strong> ${car.type}</p>
            <p><strong>Description:</strong> ${car.description}</p>
            <p><strong>Carfax:</strong> ${car.carfax}</p>
            <a href="inventory.html" class="back-link">&larr; Back to Inventory</a>
          </div>
        `;
      })
      .catch(err => document.getElementById('vehicle-container').innerHTML = "<p>Error loading vehicle.</p>");
  </script>
</body>
</html>
